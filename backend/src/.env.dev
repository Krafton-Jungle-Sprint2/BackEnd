# .env.dev - 개발 환경 설정

# 데이터베이스 설정
DATABASE_URL="mysql://teamuser:teampassword@localhost:3307/team_collaboration_dev"
SHADOW_DATABASE_URL="mysql://root:rootpassword@localhost:3307/team_collaboration_shadow_dev"

# JWT 설정
JWT_SECRET="dev-jwt-secret-key-please-change-in-production"

# 서버 포트 설정
API_PORT=4000
SOCKET_PORT=5000

# 환경 설정
NODE_ENV=development

# CORS 설정
FRONTEND_URL=http://localhost:5173

# 토큰 만료 시간 설정
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# Redis 설정 (선택사항)
REDIS_URL="redis://localhost:6379"

# 로그 레벨
LOG_LEVEL=debug

# 파일 업로드 설정
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# 이메일 설정 (개발용)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-dev-email@gmail.com
EMAIL_PASS=your-app-password

# 디버그 모드
DEBUG=true
VERBOSE_LOGGING=true